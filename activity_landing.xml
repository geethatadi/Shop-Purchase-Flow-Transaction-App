<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Location Section -->
    <TextView
        android:id="@+id/locationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingBottom="8dp" />

    <Spinner
        android:id="@+id/locationSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Categories (Grocery, Hardware, etc.) -->
    <TextView
        android:id="@+id/categoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp"
        android:paddingBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/groceryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grocery" />

        <Button
            android:id="@+id/hardwareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hardware" />
    </LinearLayout>

    <!-- Shop with Credits Section -->
    <TextView
        android:id="@+id/shopCreditsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shop with Credits"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:paddingTop="16dp" />

    <Button
        android:id="@+id/shopWithCreditsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop Now" />

    <!-- GIF Section -->
    <ImageView
        android:id="@+id/gifImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sample_gif" />

    <!-- Gift Card Receipt Section -->
    <Button
        android:id="@+id/viewGiftCardReceiptButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Gift Card Receipt"
        android:paddingTop="16dp" />
</LinearLayout>
